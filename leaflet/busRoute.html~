	<script type="text/javascript">
	/*
	var url2="path.php?";

        if(hour.toString().split(".").length > 1){url2 = url2+"hour="+Math.floor(hour)+"&min=30";}
        else{url2=url2+"hour="+hour+"&min=00";}
